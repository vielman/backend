doctype html
html
  head
    title Categorias
  body
    form(action=`/categories/${category.id}?_method=PUT` method="POST")
      input(type="text" name="title" value= category.title  placeholder="Titulo de la Categoria")
      input(type="color" name="color" value= category.color  placeholder="Color de la Categoria")
      input(type="submit" value="Guardar")
